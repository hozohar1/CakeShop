<Window x:Class="PL.AdminPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="AdminPasswordWindow" Height="685" Width="815">
    <Window.Background>
        <ImageBrush ImageSource="/rrrr.jpg"/>
    </Window.Background>
    <Grid Margin="251,152,219,249">
        <Label x:Name="NameLbl" Content="Enter name:" HorizontalAlignment="Left" Height="39" Margin="14,47,0,0" VerticalAlignment="Top" Width="125" FontSize="20"/>
        <Label x:Name="PasswordLbl" Content="Enter password:" HorizontalAlignment="Left" Height="36" Margin="14,90,0,0" VerticalAlignment="Top" Width="154" FontSize="20"/>
        <TextBox x:Name="enterNameTxt" HorizontalAlignment="Left" Height="19" Margin="214,57,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="105" TextChanged="enterNameTxt_TextChanged"/>
        <TextBox x:Name="enterPasswordTxt" HorizontalAlignment="Left" Height="18" Margin="214,89,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="105"/>
        <Button Content="Enter" Style="{StaticResource btnStyle}" HorizontalAlignment="Center" Margin="0,172,0,56" Width="94" Click="Button_Click"/>

    </Grid>
</Window>
